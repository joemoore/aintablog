<%= render :partial => 'posts/date', :locals => {:post => post}%>

<blockquote>
  <%=h post.content -%>
</blockquote>
<% unless post.cite.blank? -%>
  <cite>
    <% unless post.header.blank? -%>&#x2010; <%= spanned_link h(post.cite), post.header %><% else -%>&#x2010; <%=h post.cite %><% end -%>    
    <% if logged_in? -%>
    <%= link_to 'Edit', edit_quote_path(post) %>
    <%= link_to 'Destroy', admin_post_path(post), :method => :delete, :confirm => "Click OK to delete this post forever." %>
    <% end -%>
  </cite>  
<% else -%>
  <% if logged_in? -%>
  <cite>
  <%= link_to 'Edit', edit_quote_path(post) %>
  <%= link_to 'Destroy', admin_post_path(post), :method => :delete, :confirm => "Click OK to delete this post forever." %>
  </cite>
  <% end -%>
<% end -%>