<%= render :partial => 'posts/date', :locals => {:post => post}%>

<div class="entry">
  <%= spanned_link h(post.link_text), post.permalink -%>

  <% if post.content? %>
  <div class="article">
    <div class="entry">
      <%= markup_for(post.content) %>
    </div>
  </div>
  <% end %>
</div>

<cite>
<%- if post.feed -%>
&#x2010; Posted via <%= link_to 'del.icio.us', post.feed.url %>
<%- end -%>
<% if logged_in? -%>
<%= link_to 'Edit', edit_link_path(post.id) %>
<%= link_to 'Destroy', admin_post_path(post.id), :method => :delete, :confirm => "Click OK to delete this post forever." %>
<% end -%>
</cite>
